<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Include Spring Boot's default console logging -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Read properties from Spring environment -->
    <springProperty scope="context" name="LOG_FILE" source="logging.file.name" defaultValue="./logs/yaci-store.log"/>
    <springProperty scope="context" name="ANALYTICS_LOG_FILE" source="yaci.store.analytics.logging.file" defaultValue="./logs/analytics-store.log"/>

    <!-- Main application log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Analytics-specific log file -->
    <appender name="ANALYTICS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${ANALYTICS_LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${ANALYTICS_LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!--
        Analytics logger: writes to ANALYTICS_FILE appender only.
        additivity="true" means log events also propagate to the root logger,
        so analytics logs appear in both the main log file and the analytics-specific file.
    -->
    <logger name="com.bloxbean.cardano.yaci.store.analytics" level="INFO" additivity="true">
        <appender-ref ref="ANALYTICS_FILE"/>
    </logger>

    <!-- Root logger: console + main file -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
